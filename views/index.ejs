<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News Web</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <!-- Include the header -->
    <%- include('partials/header') %>
        <div class="container">
            <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">
                    <% if (carouselArticles && carouselArticles.length> 0) { %>
                        <% carouselArticles.forEach((article, index)=> { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <a href="<%= article.url %>" target="_blank">
                                    <% if (article.urlToImage) { %>
                                        <img src="<%= article.urlToImage %>" alt="News Image">
                                        <% } else { %>
                                            <img src="/placeholder-image.jpg" alt="No Image Available">
                                            <% } %>
                                                <div class="text">
                                                    <h1>
                                                        <%= article.title %>
                                                    </h1>
                                                    <p>
                                                        <%= article.description %>
                                                    </p>
                                                </div>
                                </a>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <div class="carousel-item active">
                                        <img src="/placeholder-image.jpg" alt="No News Available">
                                        <div class="text">
                                            <h1>No News Available</h1>
                                            <p>Please check back later for updates.</p>
                                        </div>
                                    </div>
                                    <% } %>
                </div>
                <div class="carousel-indicators">
                    <% if (carouselArticles && carouselArticles.length> 0) { %>
                        <% carouselArticles.forEach((_, index)=> { %>
                            <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="<%= index %>"
                                class="<%= index === 0 ? 'active' : '' %>" aria-label="Slide <%= index + 1 %>"></button>
                            <% }); %>
                                <% } %>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>


        <div class="container">
            <h1 class="news-head">ข่าวช่วงนี้</h1>
            <div class="news-album">
                <% if (newsAlbumArticles && newsAlbumArticles.length> 0) { %>
                    <% newsAlbumArticles.forEach(article=> { %>
                        <div class="news-card">
                            <% if (article.urlToImage) { %>
                                <img src="<%= article.urlToImage %>" alt="News Image" class="news-image">
                                <% } else { %>
                                    <div class="no-image">No image available</div>
                                    <% } %>
                                        <div class="news-content">
                                            <h2 class="news-title">
                                                <%= article.title %>
                                            </h2>
                                            <p class="news-description">
                                                <%= article.description %>
                                            </p>
                                            <a href="<%= article.url %>" target="_blank" class="news-link">Read more</a>
                                        </div>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <p>No news available at the moment.</p>
                                <% } %>
            </div>
        </div>


        <!-- Include the footer -->
        <%- include('partials/footer') %>
            <script src="/js/script.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
</body>

</html>